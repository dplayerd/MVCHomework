@model List<TryMVC.ViewModels.HomeworkViewModel>

@{
    ViewBag.Title = "ListPage";
    this.Layout = null;
}

<h2>ListPage</h2>

<div class="well">
    <form class="form-horizontal" action="@Url.Action("Create")">
        <div class="form-group">
            <label for="category" class="col-sm-2 control-label">類別</label>
            <div class="col-sm-10">
                <select id="category" name="Type" class="form-control">
                    <option value="" selected>請選擇</option>
                    <option value="0">支出</option>
                    <option value="1">收入</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label for="money" class="col-sm-2 control-label">金額</label>
            <div class="col-sm-10">
                <input type="text" name="Amount" class="form-control" id="money" placeholder="金額">
            </div>
        </div>
        <div class="form-group">
            <label for="date" class="col-sm-2 control-label">日期</label>
            <div class="col-sm-10">
                <input type="text" name="CreateDate" class="form-control" id="date" placeholder="日期">
            </div>
        </div>
        <div class="form-group">
            <label for="description" class="col-sm-2 control-label">備註</label>
            <div class="col-sm-10">
                <textarea class="form-control" name="Name" id="description">
		</textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-8 col-sm-4">
                <button type="submit" class="btn btn-default">送出</button>
            </div>
        </div>
    </form>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <tr>
                <th>#</th>
                <th>類別</th>
                <th>日期</th>
                <th>金額</th>
                <th>行為</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.ID)*@
                        @{
                            <text>@((Model).IndexOf(item) + 1)</text>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TypeName)
                    </td>
                    <td>
                        @item.CreateDate.ToString("yyyy-MM-dd")
                    </td>
                    <td>
                        @item.Amount.ToString("###,###")
                    </td>
                    <td>


                    </td>
                </tr>
            }
        </table>
    </div>
</div>
